# Complete Car Loans - Environment Configuration

# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ccl_database

# Email Service Configuration (Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Credit Check Service (FlexPath)
FLEXPATH_API_KEY=your_flexpath_api_key_here

# Security & Session
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_jwt_secret_here

# CORS & Domain Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_CREDIT_CHECK=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_REAL_TIME_CHAT=true

# External Integrations
WEBHOOK_SECRET=your_webhook_secret_here
DEALER_CRM_API_URL=https://api.dealer-crm.com/v1
DEALER_CRM_API_KEY=your_dealer_crm_api_key_here